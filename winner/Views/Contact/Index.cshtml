@model    winner.Models.ContactModel

@{
    ViewBag.Title = "Conatct";
}

<section class="site-section site-section-light site-section-top " style="color:#E60000">
    <div class="container">
        <h1 class="text-center animation-slideDown"><i class="fa fa-envelope"></i> <strong>Contact Us</strong></h1>
        <h2 class="h3 text-center animation-slideUp">We will be happy to answer all your questions and work together!</h2>
    </div>
</section>
<section class="site-section site-section-light site-section-top " style="color:#E60000; margin-top:0px;padding:0px;">
    <div class="container">
        <div class="col-sm-8 col-md-6 site-block">
            <address>
                <strong>Winner Hydraulics Australia Pty Ltd.</strong><br>
                Unit 2b/19 Peel Street, Eltham Vic, 3095<br>
              
                <abbr title="Phone">P:</abbr> – New phone number coming.<br>
                @*<abbr title="Fax">Fax:</abbr> (03) 9439 7558*@
            </address>

            

            @*<div id="gmap">*@
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3155.9914418089584!2d145.13710131579072!3d-37.71987873645097!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad637df11f32831%3A0x60bd59a891d8c7ce!2s2b%2F19+Peel+St%2C+Eltham+VIC+3095!5e0!3m2!1sen!2sau!4v1488078914751" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
            </div>
@using (Html.BeginForm("Index", "Contact", FormMethod.Post))
{
            <div class="col-sm-4 col-md-6 site-block">
                <h1 class="text-center animation-slideDown "><strong>Enter Enquiry info below </strong></h1>
                <div class="text-left">
                    <form action="contact.html#form-contact" method="post" id="form-contact">
                        <div class="form-group">
                            <label for="Name">Name</label>
                             @Html.TextBoxFor(m=>m.Name,new {@class= "form-control input-lg", placeholder = "Your name.." ,type = "text" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            @*<input id="Name" name="Name" class="form-control input-lg" placeholder="Your name.." type="text">*@
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                             @Html.TextBoxFor(m=>m.Email , new { @class = "form-control input-lg" })
                            
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="PhoneNumber">Phone Number</label>
                            @Html.TextBoxFor(m => m.phone, new { @class = "form-control input-lg" })

                            @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                           
                        </div>


                        <div class="form-group">
                            <label for="Comment">Enquiry </label>
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control input-lg" })

                            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn button ">Submit</button>
                        </div>
                    </form>

                </div>
            </div>
}
        </div>
    </section>

